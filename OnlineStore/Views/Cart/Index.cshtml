@model List<OnlineStore.Models.CartItem>

<h2>Your Cart</h2>

@if (Model.Count == 0)
{
    <p>Your cart is empty.</p>
}
else
{
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Quantity</th> <!-- Dodaj ilość -->
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Product.Name</td> <!-- Używaj item.Product.Name -->
                    <td>@item.Product.Price.ToString("C")</td> <!-- Używaj item.Product.Price -->
                    <td>@item.Quantity</td> <!-- Dodaj wyświetlanie ilości -->
                    <td>
                        <form asp-action="RemoveFromCart" method="post">
                            <input type="hidden" name="productId" value="@item.Product.Id" />
                            <button type="submit">Remove</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
