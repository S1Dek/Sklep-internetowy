@model Sklep_Internetowy.Models.Account.EditUserViewModel

<h1>Edytuj dane użytkownika</h1>
<form asp-controller="Admin" asp-action="Edit" method="post">
    <input type="hidden" asp-for="User.Id" />
    <div class="form-group">
        <label asp-for="User.FirstName"></label>
        <input class="form-control" asp-for="User.FirstName" />
    </div>
    <div class="form-group">
        <label asp-for="User.LastName"></label>
        <input class="form-control" asp-for="User.LastName" />
    </div>
    <div class="form-group">
        <label asp-for="User.Email"></label>
        <input class="form-control" asp-for="User.Email" />
    </div>
    <div class="form-group">
        <label>Role</label>
        @foreach (var role in Model.AllRoles)
        {
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="SelectedRoles" value="@role.Name"
                       checked="@Model.AssignedRoles.Contains(role.Name)" />
                <label class="form-check-label">@role.Name</label>
            </div>
        }
    </div>
    <button type="submit" class="btn btn-primary">Zapisz</button>
</form>
