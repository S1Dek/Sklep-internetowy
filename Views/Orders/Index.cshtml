@model IEnumerable<Sklep_Internetowy.Models.Order>

<h2>Moje zamówienia</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID zamówienia</th>
            <th>Data zamówienia</th>
            <th>Łączna kwota</th>
            <th>Szczegóły</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)

        {
            <tr>
                <td>@order.Id</td>
                <td>@order.OrderDate.ToString("yyyy-MM-dd")</td>
                <td>@order.TotalAmount.ToString("C")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-primary">Zobacz szczegóły</a>
                </td>
            </tr>
        }
    </tbody>
</table>
