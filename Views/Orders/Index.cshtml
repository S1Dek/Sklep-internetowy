@model IEnumerable<Sklep_Internetowy.Models.Order>

<h2>My Orders</h2>
<p>
    <a asp-action="Create">Stwórz</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Date</th>
            <th>Total</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.OrderDate.ToShortDateString()</td>
                <td>@order.TotalAmount.ToString("C")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@order.Id" class="btn btn-primary">Edit</a> |
                    <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-primary">Details</a> |
                    <a asp-action="Delete" asp-route-id="@order.Id" class="btn btn-primary">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
