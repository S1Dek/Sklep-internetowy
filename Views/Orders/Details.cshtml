@model Sklep_Internetowy.Models.Order

<h2>Szczegóły zamówienia</h2>

<p><strong>ID zamówienia:</strong> @Model.Id</p>
<p><strong>Data zamówienia:</strong> @Model.OrderDate.ToShortDateString()</p>
<p><strong>Łączna kwota:</strong> @Model.TotalAmount.ToString("C")</p>

<h3>Produkty w zamówieniu</h3>
<table class="table">
    <thead>
        <tr>
            <th>Nazwa produktu</th>
            <th>Ilość</th>
            <th>Cena jednostkowa</th>
            <th>Łączna cena</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var detail in Model.OrderDetails)

        {
            <tr>
                <td>@detail.Product.Name</td>
                <td>@detail.Quantity</td>
                <td>@detail.Price.ToString("C")</td>
                <td>@(detail.Quantity * detail.Price) zł</td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Index" class="btn btn-secondary">Powrót do listy zamówień</a>
