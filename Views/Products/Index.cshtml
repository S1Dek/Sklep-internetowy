@model IEnumerable<Sklep_Internetowy.Models.Product>

<h2>Produkty</h2>
<p>
    <a asp-action="Create">Dodaj produkt</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(product => product.Name)</th>
            <th>@Html.DisplayNameFor(product => product.Price)</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Price.ToString("C")</td>
                <td>
                    <form asp-action="AddToCart" asp-controller="Cart" method="post">
                        <input type="hidden" name="productId" value="@product.Id" />
                        <button type="submit" class="btn btn-primary">Dodaj do koszyka</button>
                    </form>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@product.Id">Edytuj</a> |
                    <a asp-action="Details" asp-route-id="@product.Id">Wyświetl detale</a> |
                    <a asp-action="Delete" asp-route-id="@product.Id"> <!-- class="btn btn-primary" -->Usuń</a>
                </td>
            </tr>
        }
    </tbody>
</table>