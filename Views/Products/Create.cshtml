@model Sklep_Internetowy.Models.Product

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Dodawanie produktu</h2>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="Name" class="form-label">Nazwa produktu</label>
                <input asp-for="Name" class="form-control" placeholder="Podaj nazwe produktu" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Image" class="form-label">Obrazek URL</label>
                <input asp-for="Image" class="form-control" placeholder="Podaj poprawny link (np., https://example.com/image.jpg)" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Price" class="form-label">Cena</label>
                <input asp-for="Price" class="form-control" placeholder="Dodaj cene produktu" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Stock" class="form-label">Ilość</label>
                <input asp-for="Stock" class="form-control" placeholder="Podaj ilość produktów" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Dodaj</button>
                <a asp-action="Index" class="btn btn-secondary">Powrót</a>
            </div>
        </form>
    </div>
    <div class="col-md-6">
        <h3>Podgląd</h3>
        <p>Tak będzie wyglądał obrazek:</p>
        <img id="imagePreview" src="#" alt="Image Preview" style="max-width: 100%; max-height: 300px; display: none;" />
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.querySelector('input[name="Image"]').addEventListener('input', function () {
            const preview = document.getElementById('imagePreview');
            const url = this.value;
            if (url) {
                preview.src = url;
                preview.style.display = 'block';
            } else {
                preview.style.display = 'none';
            }
        });
    </script>
}
